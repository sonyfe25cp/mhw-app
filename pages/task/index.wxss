/* pages/task/index.wxss */

.task-list {
  display: flex;
  flex-wrap: wrap;
  border-top: 1rpx solid #eee;
  border-left: 1rpx solid #eee;
  background-color: #fff;
  flex-direction: column;
}

.task-list .task-item {
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
  height: 200rpx;
  border-left: 2rpx solid #eee;
  border-right: 2rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  flex: 1;
  overflow: hidden;
}

.task-item .task-item-left {
  display: flex;
  flex-direction: column;
  width: 70%;
}

.task-item .task-item-right {
  display: flex;
  flex-direction: column;
  margin-right: 3rpx;
}

.task-item text {
  color: #999;
  margin-top: 10rpx;
}

.task-list .task-item text .title {
  color: black;
  /* font-family: "微软雅黑"; */
  font-weight: bold;
  font-size: 32rpx;
  margin-top: 20rpx;
}

